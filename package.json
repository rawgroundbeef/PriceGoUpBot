{
  "name": "PriceGoUpBot",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "lint-staged": {
    "apps/telegram-bot/src/**/*.{ts,tsx}": [
      "cd apps/telegram-bot && eslint src --ext .ts --fix",
      "prettier --write"
    ],
    "apps/telegram-bot/api/**/*.{ts,tsx}": [
      "cd apps/telegram-bot && eslint api --ext .ts --fix", 
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
